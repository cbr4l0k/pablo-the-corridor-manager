# Database Configuration
POSTGRES_DB=corridor
POSTGRES_USER=corridor_admin
POSTGRES_PASSWORD=super_secret_password_change_me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_group_chat_id

# pgAdmin (optional)
PGADMIN_EMAIL=admin@corridor.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Week Configuration
WEEK_DEADLINE_DAY=friday  # day of week
WEEK_DEADLINE_HOUR=12     # 24-hour format
WEEK_DEADLINE_MINUTE=0

# TypeScript Runtime (Telegram + Convex)
# Use local convex during migration: bun run convex:dev:local
# Then copy CONVEX_URL from .env.local into your shell env when running the TS bot.
APP_TIMEZONE=Europe/Amsterdam
TELEGRAM_POLL_TIMEOUT_SECONDS=30
SCHEDULER_TICK_MS=60000
CORRIDOR_MAP_PATH=media/corridor-overview.jpg
